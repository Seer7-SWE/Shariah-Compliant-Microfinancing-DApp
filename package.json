{
  "name": "shariah-dapp",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm --prefix frontend install && npm --prefix . install",
    "start": "concurrently \"node backend/server.js\" \"npm --prefix frontend run dev\"",
    "dev": "concurrently \"node backend/server.js\" \"npm --prefix frontend run dev\"",
    "build": "npm --prefix frontend run build",
    "deploy": "hardhat run --network localhost deploy/deploy-and-write-frontend.js",
    "node": "hardhat node",
    "hardhat": "hardhat"
  },
  "dependencies": {
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "ethers": "^5.8.0",
    "express": "^4.18.2",
    "lowdb": "^6.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "hardhat": "^2.26.3",
    "vite": "^7.1.2"
  }
}
